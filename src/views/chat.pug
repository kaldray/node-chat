block script
    script(src='/socket.io/socket.io.js' defer)
    script(src='/js/chat-client.js' defer )

block content
    h1 Bienvenue sur le chat #{pseudo}

    #chat-app
      .chat-users
        h2 Utilisateurs connect√©s
        ul


      .chatbox-area
        .chatbox-message
          .notification
          .message
            .msg-date
            .msg-user
